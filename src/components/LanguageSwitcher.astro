---
const { lang = "es" } = Astro.props

// Mappa lingue → path base
const locales = [
  { code: "es", label: "Español", href: "/" },
  { code: "it", label: "Italiano", href: "/it/" },
  { code: "en", label: "English", href: "/en/" },
]
---

<nav class="lang-switch" aria-label="Language switcher">
  {locales.map(l => (
    <a
      href={l.href}
      class:list={[
        "flag-btn",
        lang === l.code && "is-active"
      ]}
      aria-current={lang === l.code ? "true" : undefined}
      title={l.label}
    >
      <img src={`/assets/flags/${l.code}.svg`} width="22" height="22" alt={l.label} />
    </a>
  ))}
</nav>

<style>
.lang-switch { display:flex; gap:.5rem; align-items:center }
.flag-btn {
  display:inline-flex; align-items:center; justify-content:center;
  width:2rem; height:2rem; border-radius:999px;
  background: var(--bs-surface-2, rgba(255,255,255,.06));
  border: 1px solid rgba(255,255,255,.12);
  transition: transform .15s ease, filter .15s ease, box-shadow .2s ease;
}
.flag-btn:hover { transform: translateY(-1px); filter: brightness(1.1) }
.flag-btn.is-active {
  outline: 2px solid color-mix(in oklab, var(--brand, #6C47FF), white 25%);
  box-shadow: 0 0 18px color-mix(in oklab, var(--brand, #6C47FF), white 20%);
}
@media (prefers-reduced-motion: reduce){
  .flag-btn, .flag-btn:hover { transform:none }
}
</style>
